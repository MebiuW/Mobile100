<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/testImg"
            android:src="@drawable/mebiuw_drawable_frame"
            android:layout_marginBottom="38dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alpha"
                android:id="@+id/button_alpha"


                android:layout_marginBottom="38dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rotate"
                android:id="@+id/button_rotate"
                android:layout_alignTop="@+id/button_scale"
                android:layout_toRightOf="@+id/button_scale"
                android:layout_toEndOf="@+id/button_scale" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Scale"
                android:id="@+id/button_scale"
                android:layout_alignTop="@+id/button_alpha"
                android:layout_toRightOf="@+id/button_alpha"
                android:layout_toEndOf="@+id/button_alpha" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trans"
                android:id="@+id/button_translate"
                android:layout_alignTop="@+id/button_alpha"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="frame"
                android:id="@+id/button_frame"
                android:layout_below="@+id/button_scale"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PropertyA"
                android:id="@+id/button_proa"
                android:layout_alignTop="@+id/button_frame"
                android:layout_alignLeft="@+id/button_scale"
                android:layout_alignStart="@+id/button_scale" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PropertyB"
                android:id="@+id/button_prob"
                android:layout_alignTop="@+id/button_proa"
                android:layout_toRightOf="@+id/button_proa"
                android:layout_toEndOf="@+id/button_proa" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>
